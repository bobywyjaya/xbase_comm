<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="message_api_wizard_form" model="ir.ui.view">
            <field name="name">message.api.wizard.form</field>
            <field name="model">message.api.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <p class="text-center">
                        <h3>
                        <field name="message"/>
                        </h3>
                    </p>
                    <footer>
                        <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
